{% extends 'base.html.twig' %}

{% block title %}
    {{ user.pseudo }}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="card mb-3">
                    {% block card_header %}
                    {% endblock %}
                    <div class="card-body">
                        <div class="mt-2 mb-4 text-center">
                            {% include 'partials/_avatar.html.twig' with {'user': user, 'size': 128 } only %}
                        </div>
                        <h1 class="mb-4 text-center display-5">{{ user.pseudo }}</h1>
                        <dl class="row">
                            <dt class="col-sm-6">{{ 'label.profile_since' | trans }}</dt>
                            <dd class="col-sm-6">{{ user.createdAt | date('d-m-Y') }}</dd>
                            <dt class="col-sm-6">{{ 'label.profile_posts_count' | trans }}</dt>
                            <dd class="col-sm-6">{{ posts_count }}</dd>
                            <dt class="col-sm-6">{{ 'label.profile_comments_count' | trans }}</dt>
                            <dd class="col-sm-6">{{ posts_count }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                {% for post in posts %}
                    {% include 'partials/_card-post.html.twig' with {
                        'post': post, 
                        'likedPostIds': likedPostIds,
                        'commentPostIds': commentPostIds
                    } only %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
