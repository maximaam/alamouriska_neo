{% extends 'base.html.twig' %}

{% set header_meta = 'label.posts_questions' | trans %}

{% block title %}
    {{ header_meta }}
{% endblock %}

{% block opengraph_title %}
    <meta property="og:title" content="{{ header_meta }}" />
{% endblock %}

{% block body %}
    <div class="col-sm-8">
        <h1 class="mb-3 text-center">{{ header_meta }}</h1>

        {% for post in pagination %}
            {% include 'partials/_card-post.html.twig' with {
                post: post,
                user_like_post_ids: user_like_post_ids,
                user_comment_post_ids: user_comment_post_ids
            } only %}
        {% else %}
            <p class="alert alert-warning">{{ 'flash.search_none_found' | trans }}</p>
        {% endfor %}

        {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>

    {{ render(controller('App\\Controller\\EmbedController::sidebar')) }}

{% endblock %}
