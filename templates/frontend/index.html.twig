{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.welcome' | trans }}
    {{ parent() }}
{% endblock %}

{% block font %}
{% endblock %}

{% block opengraph_title %}
    <meta property="og:title" content="{{ 'label.welcome' | trans }} - {{ app_name }}" />
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h1 class="mb-3 text-center">{{ 'label.welcome_h1' | trans({'%app_name%': app_name}) }}</h1>
                <h2 class="white-hr">
                    <span>{{ 'label.newest_posts'|trans }}</span>
                </h2>
                {% for post in newest_posts %}
                    {% include 'partials/_card-post.html.twig' with {
                        post: post,
                        likedPostIds: likedPostIds,
                        commentPostIds: commentPostIds
                    } only %}
                {% else %}
                    <p class="text-center text-muted">No posts found.</p>
                {% endfor %}
            </div>
            {{ render(controller('App\\Controller\\EmbedController::sidebar', {max: 3})) }}
        </div>
    </div>
{% endblock %}
