{% extends 'base.html.twig' %}

{% block title %}
    {{ member.pseudo }}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="card mb-3">
                    {% block card_header %}
                    {% endblock %}
                    <div class="card-body">
                        <div class="mt-2 mb-4 text-center">
                            {% include 'partials/_avatar.html.twig' with {'user': member, 'size': 128 } only %}
                        </div>
                        <h1 class="mb-4 text-center display-5">{{ member.pseudo }}</h1>
                        <dl class="row">
                            <dt class="col-sm-6">{{ 'label.profile_since' | trans }}</dt>
                            <dd class="col-sm-6">{{ member.createdAt | date('d-m-Y') }}</dd>
                            <dt class="col-sm-6">{{ 'label.profile_posts_count' | trans }}</dt>
                            <dd class="col-sm-6">{{ posts | length }}</dd>
                            <dt class="col-sm-6">{{ 'label.profile_comments_count' | trans }}</dt>
                            <dd class="col-sm-6">{{ comments_count }}</dd>
                        </dl>

                        {% if member.enableCommunityContact %}
                        <div class="p-2 bg-gray-300 rounded">
                            <form
                                id="contact-member" 
                                method="post"
                                data-controller="contact-member"
                                data-action="post->contact-member#contact"
                                data-contact-member-url-value="{{ path('app_async_contact_member', { 'user': member }) }}"
                                data-contact-member-csrf-token-value="{{ csrf_token('contact-member') }}">
                                <div class="mb-1">
                                    <label for="msg" class="mb-1">{{ 'label.contact_member'|trans }}</label>
                                    <textarea name="msg" class="form-control"></textarea>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">{{ 'label.send'|trans }}</button>
                                </div>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                {% for post in posts %}
                    {% include 'partials/_card-post.html.twig' with {
                        'post': post, 
                        'likedPostIds': likedPostIds,
                        'commentPostIds': commentPostIds
                    } only %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
