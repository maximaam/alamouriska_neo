{% extends 'layer_center.html.twig' %}

{% block title %}
    {{ 'label.post_show' | trans }}
    {{ parent() }}
{% endblock %}

{% block card_header %}
    <h1>{{ 'label.post_show' | trans }}</h1>
{% endblock %}

{% block card_body %}
    {% include 'partials/_card-post.html.twig' with {
        'post': post, 
        'liked_post_ids': liked_post_ids,
        'comment_post_ids': comment_post_ids
    } only %}
{% endblock %}

{% block card_footer %}
    <div class="text-end mb-3 me-3">
        <a class="btn btn-primary" href="{{ path('app_post_edit', {'id': post.id} ) }}">
            {{ 'label.edit' | trans }}
        </a>
        <a class="btn btn-danger" href="{{ path('app_post_delete', {'id': post.id} ) }}">
            {{ 'label.delete' | trans }}
        </a>
    </div>
{% endblock %}
