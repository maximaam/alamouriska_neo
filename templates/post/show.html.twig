{% extends 'layer_center.html.twig' %}

{% block title %}
    {{ 'label.post_show' | trans }}
    {{ parent() }}
{% endblock %}

{% block card_header %}
    <h1>{{ 'label.post_show' | trans }}</h1>
{% endblock %}

{% block card_body %}
    {% include 'partials/_card-post.html.twig' with {
        'post': post, 
        'likedPostIds': likedPostIds,
        'commentPostIds': commentPostIds
    } only %}
{% endblock %}

{% block card_footer %}
    <div class="text-end">
        <a class="btn btn-primary" href="{{ path('app_post_edit', {'id': post.id} ) }}">
            {{ 'label.post_edit' | trans }}
        </a>
        <a class="btn btn-primary" href="{{ path('app_post_delete', {'id': post.id} ) }}">
            {{ 'label.post_delete' | trans }}
        </a>
    </div>
{% endblock %}
